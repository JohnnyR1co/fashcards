<h1>Your Decks</h1>
 
<table>
  <tr>
    <th>Deck name</th>
    <th colspan="3"></th>
  </tr>
 
  <% @decks.each do |deck| %>
    <tr>
      <td><%= deck.name %></td>
      <td><%= link_to "Edit", edit_deck_path(deck) %></td>
      <td><%= link_to "Destroy", deck_path(deck),
          method: :delete,
          data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
<%= link_to "New", new_deck_path %>