<%= form_for @card, html: {class: "form"} do |f| %>
  <% if @card.errors.any? %>
    <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <h1><%= f.label :original_text %><br></h1>
    <%= f.text_field :original_text %>
  </p>
 
  <p>
    <h1><%= f.label :translated_text %><br></h1>
    <%= f.text_field :translated_text %>
  </p>
 
  <p>
    <h1><%= f.label :review_date %></h1>
    <%= f.date_field :review_date, value: (DateTime.now.to_date + 3) %>
  </p>

  <p class="input">
    <%= f.file_field :card_picture %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
