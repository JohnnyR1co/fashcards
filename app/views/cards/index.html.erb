<h1>Listing cards</h1>
 
<table>
  <tr>
    <th>Original text</th>
    <th>Translated text</th>
    <th>Review date</th>
    <th>User_id</th>
    <th colspan="2"></th>
  </tr>
 
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td><%= card.user_id %></td>
      <td><%= link_to "Edit", edit_card_path(card) %></td>
      <td><%= link_to "Destroy", card_path(card),
          method: :delete,
          data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
 