<div class="main">
  <div class="container">
    <h1>Listing cards</h1>
 
    <table>
      <tr>
        <th>Original text</th>
        <th>Translated text</th>
        <th>Review date</th>
      </tr>
 
      <% @cards.each do |card| %>
        <tr>
          <td><%= card.original_text %></td>
          <td><%= card.translated_text %></td>
          <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>