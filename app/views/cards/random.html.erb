<p><%= @card.original_text %></p>
<p><%= @card.translated_text %></p>
<p><%= @card.review_date.strftime("%d/%m/%Y") %></p>

<%= form_for @card, url: {action: "check"}, html: {class: "form"} do |f| %>
  <%= text_field_tag :your_translate, params[:your_translate] %>
  <%= hidden_field_tag :id, @card.id %>
  <%= f.submit "Check" %>  
<% end %>
